<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:padding="5dp"
    android:background="@drawable/shape_round_dark_s">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp"
        android:background="@drawable/shape_round_white_s">
        <TextView
            android:id="@+id/diaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Title"
            android:textColor="@color/darkgray"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/diaMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="Message"
            android:textColor="@color/darkgray"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/diaTitle"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/diaDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_round_dark_s"
            android:clickable="true"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diaMsg" />
        <TextView
            android:id="@+id/diaCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"

            android:background="@drawable/shape_round_dark_s"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="Cancel"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/diaDelete"
            app:layout_constraintRight_toLeftOf="@id/diaDelete" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>